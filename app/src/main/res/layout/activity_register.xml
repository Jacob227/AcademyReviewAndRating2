<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textRegRegist"
        android:textSize="40dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="15dp"
        android:layout_marginRight="1dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full name"
        android:ems="10"
        android:id="@+id/editTextRegFullName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/editbox_background"
        android:padding="7dp"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User name *"
        android:ems="10"
        android:id="@+id/editTextRegUserName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/editbox_background"
        android:padding="7dp"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email *"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:id="@+id/editTextRegEmail"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/editbox_background"
            android:padding="7dp"
            android:textColorHint="@color/common_google_signin_btn_text_light_default"
            android:textColor="@color/common_google_signin_btn_text_light_pressed" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password *"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextRegPass"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/editbox_background"
        android:padding="7dp"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextRegPhone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/editbox_background"
            android:padding="7dp"
            android:textColorHint="@color/common_google_signin_btn_text_light_default"
            android:textColor="@color/common_google_signin_btn_text_light_pressed" />


        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Academy"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="17dp"
            android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
            android:textColor="@color/my_color_rank_text"
            android:textStyle="normal|bold|italic"/>
        <RelativeLayout
            android:layout_weight="0.1"
            android:background="@drawable/spinner_shape"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/textView_Choose_semester"
            android:layout_alignLeft="@+id/choose_semster_but_list"
            android:layout_alignStart="@+id/choose_semster_but_list"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp">

            <Spinner
                android:id="@+id/editTextRegInst"
                android:layout_width="205dp"
                android:minWidth="10dp"
                android:dropDownWidth="wrap_content"
                android:textDirection="ltr"
                android:popupBackground="@android:drawable/spinner_background"

                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown"
                android:layout_height="35dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/spinner_icon_2" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="17dp"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@color/my_color_rank_text"
        android:textStyle="normal|bold|italic"/>
    <RelativeLayout
        android:layout_weight="0.1"
        android:background="@drawable/spinner_shape"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/textView_Choose_semester"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@+id/choose_semster_but_list"
        android:layout_alignStart="@+id/choose_semster_but_list"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="120dp">

        <Spinner
            android:id="@+id/editTextRegFacl"
            android:layout_width="205dp"
            android:minWidth="10dp"
            android:dropDownWidth="wrap_content"
            android:textDirection="ltr"
            android:popupBackground="@android:drawable/spinner_background"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown"
            android:layout_height="35dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/spinner_icon_2" />

    </RelativeLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Started\nSemester"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:textSize="17dp"
                android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
                android:textColor="@color/my_color_rank_text"
                android:textStyle="normal|bold|italic"/>
            <RelativeLayout
                android:layout_weight="0.1"
                android:background="@drawable/spinner_shape"
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/textView_Choose_semester"
                android:layout_marginRight="10dp"
                android:layout_alignLeft="@+id/choose_semster_but_list"
                android:layout_alignStart="@+id/choose_semster_but_list"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="120dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/spinner_icon_2"
                    android:id="@+id/imageView5" />

                <Spinner
                    android:id="@+id/editTextSemester"
                    android:layout_width="205dp"
                    android:minWidth="10dp"
                    android:dropDownWidth="wrap_content"
                    android:textDirection="ltr"
                    android:popupBackground="@android:drawable/spinner_background"

                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/RadioGroupRegStudTeac"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:text="Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonRegStud"
            android:layout_weight="1"
            android:checked="true"
            android:layout_marginLeft="15dp" />

        <RadioButton
            android:text="Teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonRegTheac"
            android:layout_weight="0.60"
            android:layout_marginLeft="30dp" />
    </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Affiliate to System (for Teachers only)"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="19dp"
            android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
            android:textColor="@color/my_color_rank_text"
            android:textStyle="normal|bold|italic"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find your \n    name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:textSize="17dp"
                android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
                android:textColor="@color/my_color_rank_text"
                android:textStyle="normal|bold|italic"/>
            <RelativeLayout
                android:layout_weight="0.1"
                android:background="@drawable/spinner_shape"
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/textView_Choose_semester"
                android:layout_marginRight="10dp"
                android:layout_alignLeft="@+id/choose_semster_but_list"
                android:layout_alignStart="@+id/choose_semster_but_list"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="120dp">

                <Spinner
                    android:id="@+id/editTextLecName"
                    android:layout_width="205dp"
                    android:minWidth="10dp"
                    android:dropDownWidth="wrap_content"
                    android:textDirection="ltr"
                    android:popupBackground="@android:drawable/spinner_background"

                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:spinnerMode="dropdown"
                    android:layout_height="35dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/spinner_icon_2" />

            </RelativeLayout>
        </RelativeLayout>
    <Button
        android:text="Sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegRegister"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:elevation="4dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="normal|italic"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button"
        android:textSize="18sp"
        android:alpha="80"
        android:layout_marginTop="20dp"
        android:onClick="RegisterClick"/>

    </LinearLayout>
</ScrollView>

</LinearLayout>