<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_watch_reviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.academyreviewandrating.WatchReviews">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/toolbar_color">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_color_bg"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My title"
                android:layout_gravity="center"
                android:id="@+id/title_text"
                android:textSize="20dp"

                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/bar">


    <TextView
        android:text="Academy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@color/my_color_rank_text"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/academy_rank"
        android:textSize="17dp"
        android:id="@+id/academy_rank_text"
        android:layout_toRightOf="@+id/textView1"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="Faculty:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@color/my_color_rank_text"
        android:textStyle="normal|bold|italic"
        android:layout_below="@id/textView1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faculty_rank"
        android:textSize="17dp"
        android:id="@+id/faculty_rank_text"
        android:layout_toRightOf="@+id/textView3"
        android:layout_below="@+id/academy_rank_text"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="Lacturer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@color/my_color_rank_text"
        android:textStyle="normal|bold|italic"
        android:layout_below="@id/textView3"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lecturer_rank"
        android:textSize="17dp"
        android:id="@+id/lecturer_rank_text"
        android:layout_toRightOf="@+id/textView4"
        android:layout_below="@+id/faculty_rank_text"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="Course:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@color/my_color_rank_text"
        android:textStyle="normal|bold|italic"
        android:layout_below="@id/textView4"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_rank"
        android:textSize="17dp"
        android:id="@+id/course_rank_text"
        android:layout_toRightOf="@+id/textView5"
        android:layout_below="@+id/lecturer_rank_text"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="Semester:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@color/my_color_rank_text"
        android:textStyle="normal|bold|italic"
        android:layout_below="@id/textView5"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_rank"
        android:textSize="17dp"
        android:id="@+id/semester_rank_text"
        android:layout_toRightOf="@+id/textView6"
        android:layout_below="@+id/course_rank_text"
        android:textColorLink="?android:attr/textColorPrimaryInverseNoDisable"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="15dp" />
    </RelativeLayout>
</RelativeLayout>
