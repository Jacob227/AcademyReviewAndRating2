<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choose_rank_review">

    <TextView
        android:text="Choose what to rank/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize= "@dimen/font_size24"
        android:textColor= "@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:id="@+id/textViewReviewRank"
        android:autoText="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/RadioRadioChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"
        >
        <RadioButton
            android:id="@+id/RadioButtCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank/Review the lecturer and course"
            android:checked="true" />
        <RadioButton
            android:id="@+id/RadioButtFaculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Rank/Review the faculty"/>
    </RadioGroup>

    <Button
        android:text="Rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/buttonRank" />
    <Button
        android:text="Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/buttonReview" />

</LinearLayout>