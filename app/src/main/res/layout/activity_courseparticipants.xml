<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_courseparticipants"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.academyreviewandrating.Courseparticipants">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar_course_parti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/toolbar_color">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_coursePart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_color_bg"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Participants"
                android:layout_gravity="center"
                android:id="@+id/title_text_review"
                android:textSize="20dp"

                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <CheckBox
        android:text="Sort by seeking partner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/checkBoxPartner"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/bar_course_parti"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="?android:attr/checkboxStyle"
        android:textColor="@color/my_color_rank_text"
        android:elevation="0dp"
        android:textSize="15dp"/>

    <AutoCompleteTextView
        android:text=""
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxPartner"
        android:layout_alignLeft="@+id/checkBoxPartner"
        android:layout_alignStart="@+id/checkBoxPartner"
        android:layout_marginTop="32dp"
        android:id="@+id/autoCompleteTextViewFindUser"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@android:drawable/editbox_background"
        android:padding="7dp"
        android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:hint="Find Course participants"
        android:layout_width="300dp" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/spinnerFindUser"
        android:popupBackground="@android:drawable/spinner_background"
        android:background="@android:drawable/btn_dropdown"
        android:layout_below="@+id/autoCompleteTextViewFindUser"
        android:layout_alignLeft="@+id/autoCompleteTextViewFindUser"
        android:layout_alignStart="@+id/autoCompleteTextViewFindUser"
        android:layout_alignRight="@+id/autoCompleteTextViewFindUser"
        android:layout_alignEnd="@+id/autoCompleteTextViewFindUser" />

    <Button
        android:text="Start Chatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/buttonChat"
        android:background="@drawable/button_shape"
        android:textSize="@dimen/activity_vertical_margin"
        android:layout_below="@+id/spinnerFindUser"
        android:layout_centerHorizontal="true"
        android:onClick="StartChatOnClick"/>


</RelativeLayout>
