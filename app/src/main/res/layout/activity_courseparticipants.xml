<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_courseparticipants"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.academyreviewandrating.Courseparticipants">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar_course_parti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/toolbar_color">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_coursePart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_color_bg"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Participants"
                android:layout_gravity="center"
                android:id="@+id/title_text_review"
                android:textSize="20dp"

                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <EditText
        android:text=""
        android:layout_height="wrap_content"
        android:id="@+id/EditTextViewFindUser"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@android:drawable/editbox_background"
        android:padding="7dp"
        android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:hint="Chat with Course participants"
        android:layout_width="match_parent"
        android:layout_below="@+id/bar_course_parti"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Sort by seeking partner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxPartner"
        style="?android:attr/checkboxStyle"
        android:textColor="@color/my_color_rank_text"
        android:elevation="0dp"
        android:textSize="15dp"
        android:layout_below="@+id/EditTextViewFindUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp" />

    <TextView
        android:text="    Course \nParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView8"
        android:textColor="@color/my_color_rank_text"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/checkBoxPartner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view_search_part"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
