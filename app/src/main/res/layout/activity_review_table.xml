<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_review_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.academyreviewandrating.ReviewTable">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/toolbar_color">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_table"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/my_color_bg"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My"
                android:layout_gravity="center"
                android:id="@+id/title_text_review"
                android:textSize="20dp"

                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/table_layout">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Number_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No.\n"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/Reviewer_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviewer\n"
                        android:gravity="center"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/rank_date_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank\n Date"
                        android:gravity="center"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/Course_Level_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course\n Level"
                        android:gravity="center"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/Lecturer_Atti_cols"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lecturer\n Attitude"
                        android:gravity="center"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/Motivation_to_teach_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motivation \nto teach"
                        android:gravity="center"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/lecturer_interesting_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lecturer\n interesting"
                        android:gravity="center"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/few_words_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Few\nWords "
                        android:gravity="center"
                        android:background="@drawable/cell_shape"
                        android:padding="5dp"
                        android:textColor="@color/my_color_rank_text"
                        android:textStyle="normal|bold|italic"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                </TableRow>

            </TableLayout>
        </ScrollView>
</HorizontalScrollView>
</LinearLayout>
